{
  "name": "levva-vault",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "scripts": {
    "compile": "hardhat compile --config hardhat.common.ts",
    "test": "hardhat test ./test/*.spec.ts --config hardhat.config.ts",
    "test:gas": "UPDATE_SNAPSHOT=1 REPORT_GAS=true hardhat test --config hardhat-fork.config.ts ./test/gas/*.gas.spec.ts",
    "test:int-arb": "REPORT_GAS=true hardhat test --config hardhat-arb-fork.config.ts ./test/int/arb/*.spec.ts",
    "test:int-eth": "REPORT_GAS=true hardhat test --config hardhat-eth-fork.config.ts ./test/int/eth/*.spec.ts",
    "test:coverage": "UPDATE_SNAPSHOT=1 REPORT_GAS=true hardhat coverage --config hardhat.config.ts --solcoverjs ./.solcover.ts --testfiles './test/*.spec.ts'",
    "lint:write": "prettier --write ./contracts ./test ./deploy ./tasks",
    "clean": "hardhat clean",
    "clean:full": "hardhat clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@aave/core-v3": "1.19.3",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.4",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/errors": "^1.3.5",
    "@oclif/plugin-help": "^6.2.1",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.1.1",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/jest": "^29.2.5",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "@uniswap/snapshot-gas-cost": "^1.0.0",
    "@uniswap/v3-periphery": "^1.4.3",
    "bignumber.js": "^9.1.1",
    "chai": "^4.3.7",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^6.13.0",
    "ganache": "^7.8.0",
    "hardhat": "2.22.10",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^2.2.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "prettier": "^3.3.1",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "5.0.1",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "8.3.2",
    "typescript": "5.4.5",
    "dotenv": "^16.3.1"
  }
}
